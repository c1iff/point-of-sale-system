<h1>Here is you purchase history</h1>

<% if @purchases.any? %>
  <ul>
    <% @total = 0 %>
    <% @purchases.each() do |purchase| %>
      <li><a href='/purchase/<%= purchase.id %>'><%= purchase.id %> <%= purchase.purchase_date %> $<%= purchase.total %></a></li>
      <% @total += purchase.total %>
  <% end %>
</ul>
<% else %>
    <p>There are no purchases in your system yet</p>
<% end %>

<h3>Total: $<%= @total  %></h3>
<hr>
<h3>Filter:</h3>
<form action="/purchase_filter" method="post">
  <label for="start_date">Enter Start Date</label>
  <input type="date" id="start_date" name="start_date">
  <label for="end_date">Enter End Date</label>
  <input type="date" id="end_date" name="end_date">
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<p><a href="/">Home</a></p>
<p><a href="/purchases">Back</a></p>
